<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gatmobile.magictimer.TimerActivity"
    tools:showIn="@layout/activity_timer">


    <Chronometer
        android:id="@+id/chronometer_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/start_chrono_main"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />

    <Button
        android:id="@+id/start_chrono_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/reset_chrono_main"
        android:layout_toLeftOf="@+id/reset_chrono_main"
        android:layout_toStartOf="@+id/reset_chrono_main"
        android:text="@string/chrono_start" />

    <Button
        android:id="@+id/pause_chrono_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/next_chrono_main"
        android:layout_toLeftOf="@+id/next_chrono_main"
        android:layout_toStartOf="@+id/next_chrono_main"
        android:text="@string/chrono_pause" />

    <Button
        android:id="@+id/reset_chrono_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/chrono_reset" />

    <Button
        android:id="@+id/next_chrono_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/start_chrono_main"
        android:layout_toLeftOf="@+id/start_chrono_main"
        android:layout_toStartOf="@+id/start_chrono_main"
        android:text="@string/chrono_next" />

    <TextView
        android:id="@+id/player_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/player_1" />

    <TextView
        android:id="@+id/player_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/player_2" />

    <TextView
        android:id="@+id/player_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/player_2"
        android:text="@string/player_3" />

    <TextView
        android:id="@+id/player_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pause_chrono_main"
        android:layout_marginTop="74dp"
        android:text="@string/player_4" />

    <TextView
        android:id="@+id/player_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/player_4"
        android:layout_centerHorizontal="true"
        android:text="@string/player_5" />

    <TextView
        android:id="@+id/player_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/player_5"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/player_6" />

    <Chronometer
        android:id="@+id/chrono_total_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/player_1" />

    <Chronometer
        android:id="@+id/chrono_total_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/player_2"
        android:layout_alignStart="@+id/player_2"
        android:layout_below="@+id/player_2" />

    <Chronometer
        android:id="@+id/chrono_total_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/player_3"
        android:layout_alignStart="@+id/player_3"
        android:layout_below="@+id/player_3" />

    <Chronometer
        android:id="@+id/chrono_total_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/player_4" />


    <Chronometer
        android:id="@+id/chrono_total_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/player_5"
        android:layout_alignStart="@+id/player_5"
        android:layout_below="@+id/player_5" />

    <Chronometer
        android:id="@+id/chrono_total_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/player_6"
        android:layout_alignStart="@+id/player_6"
        android:layout_below="@+id/player_6" />


</RelativeLayout>
